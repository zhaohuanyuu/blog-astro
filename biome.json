{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineEnding": "lf",
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": true,
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always",
      "quoteProperties": "asNeeded",
      "attributePosition": "multiline"
    }
  }
}
